#myVideo{
  width: 100%;
}
.liuyan{
  width: 100%;
  height: auto;
}
.btn-area{
  width: 100%;
  height: 100rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
}
.btn-area .bottom{
  width: 90%;
  height: 100%;
  position: relative;
}
.btn-area .bottom input{
  height: 80%;
  border-radius: 50rpx;
  border: 2rpx solid #333;
  padding:0 100rpx 0 40rpx; 
  box-sizing: border-box;
  font-size: 30rpx;
}
.btn-area .bottom .danmu{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 25rpx;
  top: 20rpx;
  background: url(data:image/png;base64,)no-repeat center center /cover;
}
