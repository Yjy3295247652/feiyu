#myVideo {
  width: 100%;
}

.liuyan {
  width: 100%;
  height: auto;
}

.btn-area {
  width: 100%;
  height: 100rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  background: #1296db;
}

.btn-area .bottom {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-area .bottom input {
  height: 80rpx;
  width: 702rpx;
  border-radius: 50rpx;
  padding: 0 100rpx 0 40rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  outline: none;
  border: none;
  background: #fff;
}

button::after {
  border: none;
  padding: 0;
}

.btn-area .bottom .danmu {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 26rpx;
  top: 10rpx;
  background: #fff url(data:image/png;base64,)no-repeat center center /50rpx auto;
}

.list {
  width: 100%;
  height: auto;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  margin: 10rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.list-img image {
  width: 100%;
  height: 100%;
}

.list-content {
  width: 570rpx;
  min-height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 30rpx;
  color: #333;
  margin-left: 30rpx;
}

.list-name {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list-name .name {
  font-size: 40rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-name .time {
  font-size: 30rpx;
}

.list-text {
  width: 100%;
  min-height: 60rpx;
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
  font-size: 34rpx;
}

.list-text .text {
  display: flex;
  align-items: center;
  overflow: hidden;
  white-space: wrap;
}

.icon {
  display: flex;
  justify-content: flex-end;
}

.icon .huifu {
  width: 80rpx;
  height: 80rpx;
  background: url(data:image/png;base64,)no-repeat center center / 40% auto;
}

.zan {
  display: flex;
  align-items: center;
}

.zan-icon {
  width: 80rpx;
  height: 80rpx;
  background: url(data:image/png;base64,)no-repeat center center / 60% auto;
}