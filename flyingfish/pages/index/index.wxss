.swipers {
  width: 100%;
  height: 314rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.option_card {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.scroll {
  width: 750rpx;
  height: 100rpx;
  overflow: hidden;
  display: flex;
  flex-wrap: nowrap;
}

.item {
  height: 100rpx;
  padding: 29rpx 50rpx;
  position: relative;
  text-align: center;
  line-height: 100rpx;
  white-space: nowrap;
  font-size: 32rpx;
}

.item.active {
  height: 100rpx;
  color: #6eafdc;
}

.item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  height: 4rpx;
  width: 200rpx;
  background: #6eafdc;
}

.nohas {
  width: 100%;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
  color: #6eafdc;
  font-size: 30rpx;
}
