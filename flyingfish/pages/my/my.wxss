.my {
  width: 100%;
  height: 270rpx;
  background: linear-gradient(to right, #4394f0, #4a7ef4, #516afa);
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
  position: relative;
}

.my .head {
  width: 126rpx;
  height: 126rpx;
  background: #000;
  border-radius: 50%;
  overflow: hidden;
}

.my .head image {
  width: 100%;
  height: 100%;
}

.my .message {
  width: 260rpx;
  height: 126rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin: 0 0 0 16rpx;
  box-sizing: border-box;
}

.my .message .name {
  font-size: 36rpx;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.my .message .id {
  font-size: 28rpx;
  color: #ddd;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: flex;
  align-items: center;
  margin: 0;
}

.my .message .id .id-img {
  width: 40rpx;
  height: 20rpx;
  background: url(data:image/png;base64,)no-repeat center center /cover;
  margin-right: 10rpx;
  box-sizing: border-box;
}

.content {
  width: 100%;
  height: auto;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-around;
}

.content .nei {
  width: 180rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  font-size: 26rpx;
  color: #1d1d1d;
  margin-top: 20rpx;
  box-sizing: border-box;
}

.content .nei image {
  width: 60rpx;
  height: 60rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
}

.qiandao {
  width: 140rpx;
  height: 140rpx;
  background: #007aff;
  border-radius: 50%;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto 0;
  right: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.q1 {
  width: 140rpx;
  height: 140rpx;
  background: #fff;
  border-radius: 50%;
  box-sizing: border-box;
}

.q1_qian {
  overflow: hidden;
  animation: qian 0.5s linear;
}

@keyframes qian {
  0% {
    width: 125rpx;
    height: 125rpx;
  }

  25% {
    width: 80rpx;
    height: 80rpx;
  }

  50% {
    width: 0;
    height: 0;
  }

  75% {
    width: 80rpx;
    height: 80rpx;
  }

  100% {
    width: 125rpx;
    height: 125rpx;
  }
}

.q2 {
  width: 125rpx;
  height: 125rpx;
  border: 1px #007aff solid;
  border-radius: 50%;
  text-align: center;
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}

.q2 .text1 {
  height: 140rpx;
  line-height: 125rpx;
  font-size: 30rpx;
  color: #007aff;
}
